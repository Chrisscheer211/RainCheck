<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalanderActivity">

    <!-- Displays the selected date. -->
    <TextView
        android:id="@+id/dateText_textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="hello"/>

    <!-- Calendar view. -->
    <CalendarView
        android:id="@+id/calander_calanderView"
        android:layout_width="match_parent"
        android:layout_height="500dp">

    </CalendarView>

    <!-- Button to set an event. -->
    <Button
        android:id="@+id/button_"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Create Event"
        android:backgroundTint="@color/drwer_bg"
        android:layout_gravity="center"/>

</LinearLayout>